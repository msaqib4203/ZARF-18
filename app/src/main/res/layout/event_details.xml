<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <me.grantland.widget.AutofitTextView
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:textSize="20sp"
        android:text="Title"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/event_title"/>

    <TextView
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:drawablePadding="5dp"
        android:text="Title"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_calendar"
        android:layout_height="wrap_content"
        android:id="@+id/event_date"/>

    <TextView
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:text="Title"
        android:drawablePadding="5dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_rupee"
        android:layout_height="wrap_content"
        android:id="@+id/event_fee"/>

    <TextView
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:drawablePadding="5dp"
        android:text="Title"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_team"
        android:layout_height="wrap_content"
        android:id="@+id/event_team"/>

    <TextView
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:text="Title"
        android:layout_height="wrap_content"
        android:id="@+id/event_description"/>

    <TextView
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:textSize="16sp"
        android:text="Title"
        android:textStyle="bold"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_boss"
        android:layout_height="wrap_content"
        android:id="@+id/organiser1"/>

    <TextView
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:text="Title"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:textStyle="bold"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_boss"
        android:layout_height="wrap_content"
        android:id="@+id/organiser2"/>

    <TextView
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Title"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_boss"
        android:layout_height="wrap_content"
        android:id="@+id/organiser3"/>

    <TextView
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:textSize="16sp"
        android:text="Title"
        android:textStyle="bold"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_boss"
        android:layout_height="wrap_content"
        android:id="@+id/organiser4"/>
</LinearLayout>
</ScrollView>